section(data-ng-controller='ItemShipmentStatusListController')
  .container.products
    .row
        h3
          span.introcolor Order Shipment Status
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Order Date
            div.col-sm-10
              input.form-control(type="text", size = "20", name="order.customerName", id="shipto.fullname",  required, ng-model="order.orderDate", autofocus, placeholder="Enter Full name", disabled)
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Name
            div.col-sm-10
              input.form-control(type="text", size = "20", name="order.customerName", id="shipto.fullname",  required, ng-model="order.customerName", autofocus, placeholder="Enter Full name", disabled)
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Email
            div.col-sm-10
              input.form-control(type="text", size = "20", name="order.customerName", id="shipto.fullname",  required, ng-model="order.customerEmail", autofocus, placeholder="Enter Full name", disabled)
        br
        table.table.table-striped.tcartthead
          thead
            tr
              th.align_right #
              th Product Name
              th Generic Name
              th Packaging
              th.align_right Qty ordered
              th.align_right Qty readied
              th.align_right Qty shipped
              th.align_right Qty unshipped
              th Options
          tbody
            tr(ng-repeat='item in order.items | orderBy:columnSort.sortColumn:columnSort.reverse')
              td.align_right {{$index+1}}
              td {{item.manufacturersName}}
              td {{item.genericName}}
              td {{item.packaging}}
              td.align_right {{item.qty          | customCurrency:"":".":",":0}}
              td.align_right {{item.qtyReadied   | customCurrency:"":".":",":0}}
              td.align_right {{item.qtyShipped   | customCurrency:"":".":",":0}}
              td.align_right {{item.qtyRemaining | customCurrency:"":".":",":0}}
              td
                a.href(ng-click="viewOrder(order._id)", ng-disabled="form.$invalid",)
                  | View Dock
              td
                a.href(ng-click="viewOrder(order._id)", ng-disabled="form.$invalid",)
                  | View Shipments
        br
        hr
        br
