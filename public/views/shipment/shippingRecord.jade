section(data-ng-controller='ShippingRecordController')
  .container.products
    .row
        h3
          span.introcolor Create shipping Record
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Order Date
            div.col-sm-4
              input.form-control(type="text", maxlength = "20", size="35", name="shippingRecord.customerName", id="shipto.fullname",  required, ng-model="orderDate", autofocus, placeholder="Enter Full name", disabled)
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Name
            div.col-sm-4
              input.form-control(type="text",maxlength = "20", size="35", name="shippingRecord.customerName", id="shipto.fullname",  required, ng-model="shippingRecord.customerName", autofocus, placeholder="Enter Full name", disabled)
        div.row
          div.form-group
            label.control-label.col-sm-2(for='name') Email
            div.col-sm-4
              input.form-control(type="text",maxlength = "20", size="35", name="shippingRecord.customerName", id="shipto.fullname",  required, ng-model="shippingRecord.customerEmail", autofocus, placeholder="Enter Full name", disabled)
        br
        table.table.table-striped.tcartthead
          thead
            tr
              th.align_right #
              th Product Name
              th Generic Name
              th Packaging
              th.align_right Qty ordered
              th Qty readied
              th.align_right Qty shipped
              th.align_right Qty unshipped
          tbody
            tr(ng-repeat='item in shippingRecord.items | orderBy:columnSort.sortColumn:columnSort.reverse')
              td.align_right {{$index+1}}
              td {{item.manufacturersName}}
              td {{item.genericName}}
              td {{item.packaging}}
              td.align_right {{item.qty          | customCurrency:"":".":",":0}}
              td
                input.input-mini.align_right(style='width:5em' ,type = 'number', min = 0, max = '{{item.qtyRemaining}}', ng-model = 'item.qtyReadied')
              td.align_right {{item.qtyShipped   | customCurrency:"":".":",":0}}
              td.align_right {{item.qtyRemaining | customCurrency:"":".":",":0}}
          tfoot
              td
              td
              td Total
              td
              td.align_right {{totQty          | customCurrency:"":".":",":0}}
              td
                  input.align_right.print-clean.input-mini(style='width:5em' ,type = 'number', min = 0, value = '{{totalQtyReadied() }}', disabled)
              td.align_right {{totShipped   | customCurrency:"":".":",":0}}
              td.align_right {{totRemaining | customCurrency:"":".":",":0}}

        br
        hr
        br
        a.btn.btn-success(ng-click="cancel(order._id)") Cancel
        a.btn.btn-warning(ng-click="save(order._id,shippingRecord)") Save   
